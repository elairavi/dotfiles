### Colors ###
[colors]

## Text Color ##
foreground = #DEDDDA

## Blueis Modules Color ##
background-alt = #aa7E9191

## Background Color ##
background = #aa0a0d11

### Bar Settings ###
[bar/nasa]
width = 100%
height = 18
radius = 0.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
border-top-size = 0
border-bottom-size = 0

